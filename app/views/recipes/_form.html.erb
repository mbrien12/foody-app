    <%= form.label :time %>
    <%= form.text_field :time, id: :recipe_time %>
  </div>

  <div class="field">
    <%= form.label :serving %>
    <%= form.number_field :serving, id: :recipe_serving %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :recipe_url %>
  </div>

  <div class="field">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, id: :recipe_ingredients %>
  </div>

  <div class="field">
    <%= form.label :instructions %>
    <%= form.text_area :instructions, id: :recipe_instructions %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :recipe_category %>
  </div>

  <div class="field">
  <%= form.label :image %>
  <%= form.text_field :image, id: :recipe_image %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
